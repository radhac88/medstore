<%= form_for @product, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :batch_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :batch_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :vendor_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :vendor_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :manufactured_on, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :manufactured_on, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :expired_on, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :expired_on, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cost_price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cost_price, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                products_path, :class => 'btn' %>
  </div>
<% end %>
