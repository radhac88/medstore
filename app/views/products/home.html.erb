
<%# Images carousel display................................................... %>

<div id="myCarousel" class="carousel slide">
  <ol class="carousel-indicators">
    <p data-target="#myCarousel" data-slide-to="0" class="active"></p>
    <p data-target="#myCarousel" data-slide-to="1"></p>
    <p data-target="#myCarousel" data-slide-to="2"></p>
  </ol>
  <!-- Carousel items -->
  <div class="carousel-inner">
    <div class="active item"><img src="pills.jpg"></div>
    <div class="item"><img src="pills1.jpg"></div>
    <div class="item"><img src="pills2.jpg"></div>
  </div>
  <!-- Carousel nav -->
  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div>

<div class="container-fluid">
  <div class="row-fluid">
    <div class="span12">
    </div>
  </div>

<%# Latest products............................................................ %>

    <div class="row-fluid">
      <div class="span3">
          <pre style="background-color:wheat;"><b style="font-family:'tempus sans itc';color:indigo;">Latest Products</b>
            <table>
            <% @products.last(5).reverse.each do |f| %>
           <tr><td style="padding-right:0px;"><%= f.product_name %></td>
           </tr>
            <% end %>
        </table>
        <b style="padding-left:70px;"><%= link_to 'more...',reports_path() %></b>
        </pre>
      </div>

<%# About to expire products.....................................................%>

      <div class="span5">
          <pre style="background-color:wheat;"><b style="font-family:'tempus sans itc';color:indigo;">About to Expire products</b>
          <table>
          <% @exproduct.last(5).each do |p| %>
         <tr><td align="left"><%= p.product_name %></td>
        <td style="padding-left:160px;" align="right"><%= (p.expired_on-Date.today).to_i %>-days</td><tr/>
          <% end %>
      </table>
      <b style="padding-left:240px;"><%= link_to 'more...',reports_path() %></b>
      </pre>
      </div>

<%# Today's sale..................................................................%>

      <div class="span4">
        <pre style="background-color:wheat;"><b style="font-family:'tempus sans itc';color:indigo;">Today's sale</b>
        <p>Site is under construction.. Sales not started yet.. <br/>Please visit later..</p></pre>
      </div>
    </div>
</div>